doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      link(rel='author', href='https://plus.google.com/u/0/116816240985852388027')
      link(rel='publisher', href='https://plus.google.com/u/0/116816240985852388027')
      meta(name='description', content= locals.description)
      meta(name='keywords', content='Azat, paleo, yoga, entrepreneurship, travel')
      meta(name='author', content='Azat Mardanov')
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Anonymous+Pro:400,700,400italic,700italic|Merriweather:400,700,300')
      link(rel='stylesheet', href='#{locals.env.config.baseUrl}/css/main.css')
      link(rel='stylesheet', href='#{locals.env.config.baseUrl}/../css/font-awesome.min.css')
  body(class=bodyclass)
    header.header
      div.content-wrap
        block header
          div.logo
            h1
              a(href=locals.url)= locals.name
            p.description= locals.description
    div#content
      div.content-wrap
        block content
          h2 Welcome to zombocom!
    footer
      div.content-wrap
        block footer
          section.about
            !=contents['about.md'].html
          section.copy
            p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
              a(href='https://github.com/jnordberg/wintersmith') Wintersmith
              |&nbsp;and&nbsp;
              a(href='http://nodejs.org') Node.js
              //- please leave the 'powered by' if you use the design

